{
    "compilerOptions": {
        "baseUrl": ".",
        "strict": true,
        "lib": ["esnext", "dom"],
        "target": "esnext",
        "module": "none",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "noEmitOnError": true,
        "typeRoots": ["node_modules/@types", "types"],
        "outDir": "out",
        "sourceMap": true,
    },
    "ts-node": {
        "compilerOptions": {
            "target": "esnext",
            "module": "commonjs"
        }
    },
    "include": ["src", "tests", "rollup.config.ts", "play.ts"]
}